<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/titlebar" />

    <TextView
        android:id="@+id/textViewHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_much_time_do_you_have"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <ImageButton
        app:srcCompat="@drawable/ic_quiz_5"
        android:id="@+id/FIVEimageButton"
        android:scaleType="fitXY"
        android:layout_weight="0.22"
        android:background="@android:color/transparent"
        android:layout_width="190dp"
        android:layout_height="25dp" />

    <ImageButton
        app:srcCompat="@drawable/ic_quiz_10"
        android:id="@+id/TENimageButton"
        android:scaleType="fitXY"
        android:layout_weight="0.22"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="25dp" />

    <ImageButton
        app:srcCompat="@drawable/ic_quiz_30"
        android:id="@+id/THYRTYimageButton"
        android:scaleType="fitXY"
        android:layout_weight="0.22"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="25dp" />

</LinearLayout>